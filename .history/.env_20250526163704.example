# Environment Configuration
# This file serves as a template for environment-specific configurations
# Copy this file to .env.dev, .env.qa, or .env.prod and fill in the values

# Environment Type (dev, qa, prod)
ENV=dev

# Salesforce Configuration
SF_USERNAME=your_salesforce_username@example.com
SF_PASSWORD=your_salesforce_password
SF_URL=https://login.salesforce.com
SF_ORG_ALIAS=my-org-alias
SF_API_VERSION=57.0
SF_INSTANCE_URL=https://your-instance.my.salesforce.com

# OrangeHRM Configuration
ORANGE_HRM_URL=https://opensource-demo.orangehrmlive.com
ORANGE_HRM_USERNAME=Admin
ORANGE_HRM_PASSWORD=admin123

# Output Configuration
PAGES_OUTPUT_DIR=./src/pages
TESTS_OUTPUT_DIR=
ELEMENTS_OUTPUT_FILE=./sf_elements.json
SF_SESSION_FILE=./sessions/sf_session.txt
AUTH_STORAGE_DIR=./auth

# Browser Configuration
HEADLESS=true
BROWSER_SLOW_MO=0
BROWSER_TIMEOUT=30000

# Test Configuration
DEFAULT_TIMEOUT=30000
ACTION_TIMEOUT=15000
EXPECT_TIMEOUT=5000
SCREENSHOT_ON_FAILURE=true
RETRY_COUNT=2
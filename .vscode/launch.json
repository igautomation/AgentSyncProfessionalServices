{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["${file}", "--debug"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current Test",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["${file}"],
      "console": "integratedTerminal"
    }
  ]
}
